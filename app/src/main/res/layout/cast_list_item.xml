<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="16dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cast_card"
        android:layout_height="280dp"
        android:layout_width="150dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="4dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cast_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cast_thumbnail_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_profile" />

            <LinearLayout
                android:id="@+id/cast_detail_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:id="@+id/cast_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/white"
                    tools:text="Jason Momoa" />

                <TextView
                    android:id="@+id/cast_character"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceSmallInverse"
                    tools:text="Aquaman" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
